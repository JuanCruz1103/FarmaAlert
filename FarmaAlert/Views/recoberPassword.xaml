<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              BackgroundColor="White"
             x:Class="FarmaAlert.recoberPassword"
             Title="Recuperación de contraseña"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" VerticalOptions="Center" BackgroundColor="White">
                <Label
                    Text="Correo Electronico"
                    TextColor="#F85F6A" MaximumWidthRequest="300" FontAttributes="Bold"
                    ></Label>
                <Entry
                    Keyboard="Email"
                    TextColor="Grey"
                    MaximumWidthRequest="300"></Entry>
                <ActivityIndicator
                    VerticalOptions="CenterAndExpand"
                    >
                </ActivityIndicator>
                <Button
                    BackgroundColor="#F85F6A"
                    FontAttributes="Bold"
                    HeightRequest="46" WidthRequest="300"
                    IsEnabled="True"
                    Margin="10, 150, 0, 0" 
                    Text="Recuperar contraseña"
                    TextColor="White" 
                    VerticalOptions="EndAndExpand"
                    >
                </Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>